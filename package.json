{
  "name": "playwright-graphql",
  "version": "1.1.0",
  "description": "This library provide playwright integration with graphql for efficient API tests.",
  "main": "lib/requester.js",
  "typings": "lib/requester.d.ts",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.d.ts"
    },
    "./reporter": {
      "require": "./lib/reporter/index.js",
      "import": "./lib/reporter/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "tsc --build --clean",
    "install:deps": "npm install --registry=https://registry.npmjs.org",
    "test": "PW_GQL_TEMP_DIR=./tests/resources/coverageDir jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanteUkraine/playwright-graphql.git"
  },
  "keywords": [
    "playwright",
    "graphql"
  ],
  "author": "Oleksandr Solomin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DanteUkraine/playwright-graphql/issues"
  },
  "homepage": "https://github.com/DanteUkraine/playwright-graphql#readme",
  "dependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.2",
    "@graphql-codegen/typescript-generic-sdk": "4.0.1",
    "@graphql-codegen/typescript-operations": "4.4.0",
    "get-graphql-schema": "2.1.2",
    "gql-generator": "2.0.0",
    "json-bigint-patch": "^0.0.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@playwright/test": ">= 1.44.x"
  }
}
